        <view class="flex-1  margin-left-30 h4-5" style='color:#BBBBBB '>此任务结束还剩</view>

      </view>

    </view>


    <view class="asd flex-1" style=' width:95%'>
      <view class="flex-wrap" style=' margin-bottom:30rpx'>
        <view class="flex-row margin-top:10">
          <view class="margin-left-20  " id="z1" style='margin-top:15rpx'></view>
          <view class="margin-left-20">{{list1[idx].order_startaddress}}</view>
        </view>
        <view class=" margin-top-10 h5" style='color:#BBBBBB; margin-left:60rpx'>起点距您206公里</view>
        <view class="flex-row">
          <view class="margin-left-20 " id="z2" style='margin-top:30rpx'></view>
          <view class="margin-left-20 margin-top-10">{{list1[idx].order_targetaddress}}</view>
        </view>
        <view class="margin-left-30 h5 margin-top-10" style='color:#BBBBBB ; margin-left:60rpx'>总里程{{list1[idx].milestone}}公里</view>
      </view>

    </view>






  </navigator>

