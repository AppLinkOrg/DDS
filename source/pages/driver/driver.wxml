        </view>
        <view class="margin-left-20  " style='color:#BBBBBB'>订单编号</view>
        <view class="margin-left-20 margin-right-20 " style='color:red'>{{list1[idx].order_orderno}}</view>
      </view>

      <view class="flex-center flex-row margin-top-20">
        <view class="margin-left-20  ">
