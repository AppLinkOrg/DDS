<view class='txt-primary margin-left-10'  >{{item.aboutus_content}}</view>
</view></view>

<view style='border-bottom:1rpx dashed #e5e4e7'  wx:for='{{abouts}}' hidden='{{item.title!="C"}}'  wx:key='k'>
