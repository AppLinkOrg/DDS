<!--pages/certification/certification.wxml-->
<view wx:for='{{errlist}}' wx:if='{{errlist.length>0}}' class='padding-20'>
  <view class='h4 txt-primary txt-bold txt-center' wx:if='{{item.status=="I"}}'>您的认证申请已提交，请耐心等待审核！</view>
</view>

<view wx:if="{{errlist.length==0}}">
  <form bindsubmit="confirm" bindreset="formReset" report-submit="{{true}}">
    <view class=''>
      <view class='flex-row column padding-40'>
        <view>企业名称</view>
        <input class='padding-20 margin-top-20 ctc_border' name='enterprisename' bindinput='enterprisename' placeholder='请输入企业名称'></input>
      </view>

      <view class='flex-row column padding-40'>
        <view>统一社会信用代码</view>
        <input class='padding-20 margin-top-20 ctc_border' name='creditcode' bindinput='creditcode' type='number' placeholder='请输入统一社会信用代码'></input>
      </view>

      <view class='flex-row column padding-40'>
        <view>营业执照或有效证明</view>
        <view class=' margin-top-20 ctc_border padding-10' bindtap='uploadimg'>

          <view class='img flex-row flex-column padding-top-100' style='line-height' wx:if='{{photo==undefined}}'>
            <image class='icon-100 ' src='{{uploadpath}}resource/{{res.addrz_icon}}'></image>
          </view>

          <image wx:if='{{photo!=undefined}}' class='photo img' mode='aspectFit' src='{{uploadpath}}Renzheng/{{photo}}'></image>

          <input hidden='true' name="photo" value="{{photo}}"></input>

        </view>
      </view>

      <view class='margin-top'>
        <button hover-class='hover_btn' class='btn' form-type='submit'>提交</button>
      </view>
    </view>
  </form>
</view>

<view wx:for='{{errlist}}' wx:key='k' class='padding-40 flex-row column' wx:if='{{item.status=="A"}}'>

  <view class='flex-row column '>
    <view>企业名称</view>
    <input class='padding-20 margin-top-20 ctc_border txt-black' disabled='false' value='{{item.enterprisename}}'></input>
  </view>

  <view class='flex-row column margin-top-20'>
    <view>统一社会信用代码</view>
    <input class='padding-20 margin-top-20 ctc_border txt-black' disabled='false' value='{{item.creditcode}}'></input>
  </view>

  <view class='flex-row column margin-top-20'>
    <view>营业执照或有效证明</view>
    <view class=' margin-top-20 ctc_border padding-10'>
      <image class='photo img' mode='aspectFit' src='{{uploadpath}}Renzheng/{{item.authenticateimg}}'></image>
    </view>
  </view>

</view>